<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="/jquery.js"         defer="defer"></script>
    <script src="/jquery-ui.min.js"  defer="defer"></script>
    <script src="/bootstrap.js"      defer="defer"></script>
    {{#if user}}
      {{#if user.type }}
        <script src="/dashorganizer.js"     defer="defer"></script>
      {{else}}
        <script src="/dashprovider.js"     defer="defer"></script>
      {{/if}}
    {{else}}
      <script src="/login.js"    defer="defer"></script>
    {{/if}}
  
    <link rel="stylesheet" href="/bootstrap.css" />
    <link rel="stylesheet" href="/jquery-ui.min.css" />
    <link rel="stylesheet" href="/css.css" />
    <title>Party Poper</title>
  </head>
  <body>
    {{#if user}}

      <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#"><img src="/popper.png" alt="" style="height: 30px" /></a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" id="logout" href="#">logout</a>
            </li>
          </ul>
        </div>
      </nav>

      {{#if user.type }}

      <div id="dash-table-container">
        <div class="row" id="dash-table-container-row"></div>
      </div>
      <!-- The modal -->
      <div class="modal fade" id="book-modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="modalLabel">Booking <span id="form-name"></span></h4>
              </div>
              <div class="modal-body">
              <div class="container">
              <div class="row">
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">date</span>
                  <input type="text"  id="datepicker" aria-describedby="basic-addon2">
                  <span class="input-group-btn">
                    <button id="conclude-book" class="btn btn-primary" type="button" data-dismiss="modal">Book!</button>>
                  </span>
                </div>
              </div>
          </div>
              </div>
              <div class="modal-footer">
             
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      {{else}}

        <form id="providerdash">
          <div class="form-group">
            <label for="selectCategory"><strong>Offer</strong></label>
            <select class="form-control" id="selectCategory">
              <option>Select Category</option>
              <option value="Agency">Agency</option>
              <option value="Artist">Artist</option>
              <option value="Venue">Venue</option>
              <option value="Media Service">Media Services</option>
              <option value="Photography">Photography</option>
              <option value="Advertisement">Advertisement</option>
              <option value="Technology">Technology</option>
            </select>
          </div>
          <div class="form-group">  
            <div class="input-group" style="text-align: center">
              <div id="datepicker" style= "margin: auto; margin-bottom: 20px;" ">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">â‚¬</span>
              <input id="cost" type="number" class="form-control" >
            </div>
          </div>
          <div class="form-group"> 
            <textarea id="description" class="form-control" placeholder="Description" aria-describedby="sizing-addon1" rows="3"></textarea>
          </div>

         <button id="save" class="btn btn-lg btn-primary btn-block">Save</button>
        
        </form>

      {{/if}}
    {{else}}
      <div class="container">
        <div class="row" id="pwd-container">
          <div class="col-md-4"></div>  
          <div class="col-md-4">
            
            <section class="login-form ">
              <form id="signin" method="post" action="#" role="login" >
                <img src="/popper.png" class="img-responsive" alt="" />
                <input class="form-control input-lg" id="login-username" />
                <input class="form-control input-lg" type="password" id="login-password" />            
                <div class="pwstrength_viewport_progress"></div>
                <button id="login-user" class="btn btn-lg btn-primary btn-block">Sign in</button>
                <div>
                  <a class="switch" href="#">Create account</a>
                </div>
              </form>
            </section>

            <section class="login-form hide">
              <form method="post" action="#" role="register" >
                <img src="/popper.png" class="img-responsive" alt="" />
                <fieldset class="form-group">
                  <div class="form-check" id="register-type">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="optionsRadios" value="1" checked>
                      I'm an event organizer!
                    </label>
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="optionsRadios"d value="0">
                      I'm a service provider!
                    </label>
                  </div>
                </fieldset>
                <input class="form-control input-lg" id="register-username" />
                <input class="form-control input-lg" type="password" id="register-password" />            
                <div class="pwstrength_viewport_progress"></div>
                <button id="register-user" class="btn btn-lg btn-primary btn-block">Register</button>
                <div>
                  <a class="switch" href="#" >Sign in</a>
                </div>
              </form>
            </section>  
          </div>  
          <div class="col-md-4"></div>
        </div>
      </div>
    {{/if}}       
  </body>
</html>


